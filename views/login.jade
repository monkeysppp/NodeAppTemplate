extends layout

block content
  .loginback
    .loginwrap
      #login.login
        form(action='/login' method='post')
          .headingBlock
            .heading
              span.heading #{title} login
          .entryBlock
            .entryField
              span Username:
            .entryField
              input#username.loginCredentials(name='username')
          .entryBlock
            .entryField
              span Password:
            .entryField
              input#password.loginCredentials(name='password' type='password')
          .buttonBlock
            input.loginButton(
              type='submit'
              value='Log in'
              )
